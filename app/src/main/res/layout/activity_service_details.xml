<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Service Image -->
        <ImageView
            android:id="@+id/imageViewServiceDetails"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_image"
            android:contentDescription="@string/service_pictures"
            android:layout_marginBottom="16dp" />

        <!-- Service Name -->
        <TextView
            android:id="@+id/tvServiceNameDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/service_name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Service Description -->
        <TextView
            android:id="@+id/tvServiceDescriptionDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/service_description"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Price and Discount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvServicePriceDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/service_price"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/tvServiceDiscountDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/discount_background"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp"
                android:text="@string/example_discount"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Category -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvServiceCategoryDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/service_category"
            android:layout_marginBottom="16dp" />

        <!-- Availability and Visibility -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/availability_"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvServiceAvailabilityDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/available" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/visibility"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvServiceVisibilityDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/visible" />
            </LinearLayout>
        </LinearLayout>

        <!-- Duration -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvServiceDurationDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration: Not specified"
            android:layout_marginBottom="16dp" />

        <!-- Reservation Type -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservation Type"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvServiceReservationTypeDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservation: Not specified"
            android:layout_marginBottom="16dp" />

        <!-- Event Types -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_type"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvServiceEventTypesDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Types: Not specified"
            android:layout_marginBottom="16dp" />

        <!-- Provider Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Provider Information"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvServiceProviderInfoDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Provider: Not specified"
            android:layout_marginBottom="24dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnBookServiceDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Service"
                android:layout_marginEnd="8dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnEditServiceDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_service"
                android:layout_marginEnd="8dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnDeleteServiceDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_service"
                android:backgroundTint="@android:color/holo_red_dark"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
