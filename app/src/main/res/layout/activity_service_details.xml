<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service Details"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Service Images -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerImages"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/gray"
            android:layout_marginBottom="8dp" />

        <!-- Image indicators -->
        <LinearLayout
            android:id="@+id/layoutIndicators"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal" />

        <!-- Service Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Service Name with Heart Icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvServiceNameDetails"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/service_name"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color" />

                    <ImageView
                        android:id="@+id/favoriteIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/heart_empty"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Add to favorites"
                        android:visibility="gone" />

                </LinearLayout>

        <!-- Service Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/service_description"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvServiceDescriptionDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/service_description"
            android:layout_marginBottom="16dp" />

        <!-- Price -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/service_price"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvServicePriceDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/service_price"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/tvServiceDiscountDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/discount_background"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp"
                android:text="@string/example_discount"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Category -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvServiceCategoryDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/service_category"
            android:layout_marginBottom="16dp" />

        <!-- Availability -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/availability_"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvServiceAvailabilityDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/available"
            android:layout_marginBottom="16dp" />

        <!-- Visibility -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/visibility"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvServiceVisibilityDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/visible"
            android:layout_marginBottom="16dp" />

        <!-- Duration -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvServiceDurationDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration: Not specified"
            android:layout_marginBottom="16dp" />

        <!-- Reservation Type -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservation Type"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvServiceReservationTypeDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservation: Not specified"
            android:layout_marginBottom="16dp" />

        <!-- Event Types -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_type"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvServiceEventTypesDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Types: Not specified"
            android:layout_marginBottom="16dp" />

        <!-- Provider Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Provider Information"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvServiceProviderInfoDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Provider: Not specified"
            android:layout_marginBottom="24dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnBookServiceDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Service"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_primary"
                android:textColor="@android:color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnEditServiceDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_service"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_primary"
                android:textColor="@android:color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnDeleteServiceDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_service"
                android:background="@drawable/button_secondary"
                android:textColor="@android:color/white"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Provider Profile and Chat Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnProviderProfileDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Provider Profile"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_secondary"
                android:textColor="@android:color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnChatWithProviderDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat with Provider"
                android:background="@drawable/button_primary"
                android:textColor="@android:color/white"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
