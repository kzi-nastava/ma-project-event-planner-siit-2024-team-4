<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_service"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <!-- Service Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/service_name"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etServiceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name_of_service"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <!-- Service Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/service_description"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etServiceDescription"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="@string/description_of_service"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:layout_marginBottom="16dp" />

        <!-- Price -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/service_price"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etServicePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_service_price"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp" />

        <!-- Discount -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/service_discount"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etServiceDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_discount"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp" />

        <!-- Category -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Event Types -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/service_event_types"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerEventTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnAddEventType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Event Type"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvSelectedEventTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selected: None"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Duration -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/duration_of_service"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_duration_of_service"
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <!-- Min/Max Engagement -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Engagement Range (minutes)"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etMinEngagement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/add_min_engagement"
                android:inputType="number"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/etMaxEngagement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/add_max_engagement"
                android:inputType="number" />
        </LinearLayout>

        <!-- Reservation Due -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/due_for_service_reservation"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etReservationDue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_reservation_due"
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <!-- Cancellation Due -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/due_for_service_cancellation"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etCancellationDue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_cancellation_due"
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <!-- Reservation Type -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reservation_type"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <RadioGroup
            android:id="@+id/rgReservationType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbAutomatic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/automatic"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rbManual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/manual" />
        </RadioGroup>

        <!-- Availability -->
        <CheckBox
            android:id="@+id/cbAvailable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/available"
            android:checked="true"
            android:layout_marginBottom="8dp" />

        <!-- Visibility -->
        <CheckBox
            android:id="@+id/cbVisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/visible"
            android:checked="true"
            android:layout_marginBottom="16dp" />

        <!-- Current Images -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Images"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvCurrentImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No images"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Image Upload -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload New Images (optional)"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <Button
            android:id="@+id/btnUploadImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_image"
            android:layout_marginBottom="8dp" />

            <TextView
            android:id="@+id/tvImageCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No new images selected"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save" />
            </LinearLayout>

    </LinearLayout>
</ScrollView>
