<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/card_id"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@drawable/border_background_black"
    android:padding="10dp"
    android:onClick="editService"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    >

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/service_band"
        android:contentDescription="@string/service" />

    <TextView
        android:id="@+id/product_description"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/product_image"
        android:text="@string/name_of_band"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="183dp"
        android:layout_height="180dp"
        android:layout_below="@id/product_description"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/product_image"
        android:text="@string/bend_description"
        android:textSize="14sp"
        android:textStyle="italic" />

</RelativeLayout>